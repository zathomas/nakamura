	<profile>
      <id>license</id>
	  <build>
	    <plugins>
	      <plugin>
	        <groupId>com.mycila.maven-license-plugin</groupId>
	        <artifactId>maven-license-plugin</artifactId>
	        <version>1.9.0</version>
	        <configuration>
	          <basedir>${basedir}</basedir>
	          <encoding>UTF-8</encoding>
	          <header>resources/src/main/resources/header.txt</header>
	          <quiet>false</quiet>
	          <failIfMissing>true</failIfMissing>
	          <aggregate>false</aggregate>
	          <includes>
	            <include>**/src/**/java/org/sakaiproject/**/*.java</include>
	            <include>**/src/**/java/**/Nakamura*.java</include>
	            <include>**/src/**/java/**/Sakai*.java</include>
              </includes>
	          <excludes>
	            <exclude>bin/**</exclude>
	            <exclude>binary/**</exclude>
	            <exclude>etc/**</exclude>
	            <exclude>last-release/**</exclude>
	            <exclude>nightly/**</exclude>
	            <exclude>resources/**</exclude>
	            <exclude>scripts/**</exclude>
	            <exclude>testscripts/**</exclude>
	            <exclude>tools/**</exclude>
	            <exclude>webstart/**</exclude>
	            <exclude>**/m2-target/**</exclude>
	            <exclude>**/target/**</exclude>
	            <!--
	              <include>**/src/**/org/apache/**/*.java</include>
	              <include>**/src/**/org/drools/**/*.java</include>
	              <include>**/src/**/com/sample/**/*.java</include>
	            -->
                <exclude>libraries/utils/src/main/java/org/sakaiproject/nakamura/util/XmlUtils.java</exclude>
	            <exclude>**/COMMITTERS</exclude>
	            <exclude>**/CONTRIBUTING</exclude>
	            <exclude>**/LICENSE</exclude>
	            <exclude>**/NOTICE</exclude>
	            <exclude>**/*.bat</exclude>
	            <exclude>**/*.doc</exclude>
	            <exclude>**/*.json</exclude>
	            <exclude>**/*.log</exclude>
	            <exclude>**/*.md</exclude>
	            <exclude>**/*.patch</exclude>
                <exclude>**/*.properties</exclude>
	            <exclude>**/*.rdf</exclude>
	            <exclude>**/*.sh</exclude>
	            <exclude>**/*.txt</exclude>
	            <exclude>**/*.textile</exclude>
	            <exclude>**/*.xml</exclude>
	          </excludes>
              <properties>
	            <holder>Sakai Foundation</holder>
	            <holder.acronym>SF</holder.acronym>
	            <apache.license.version>2.0</apache.license.version>
	          </properties>
	          <strictCheck>true</strictCheck>
	          <useDefaultExcludes>true</useDefaultExcludes>
	          <useDefaultMapping>true</useDefaultMapping>
	        </configuration>
	        <executions>
	          <execution>
	            <id>check-headers</id>
                <phase>verify</phase>
	            <goals>
	              <goal>check</goal>
	            </goals>
	          </execution>
	        </executions>
	      </plugin>
	    </plugins>
	  </build>
