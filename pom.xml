              </executions>
            </plugin>
          </plugins>
        </build>
        <dependencies>
          <dependency>
            <groupId>org.sakaiproject.nakamura</groupId>
            <artifactId>perf4j-enhanced</artifactId>
          </dependency>
          <dependency>
            <groupId>org.aspectj</groupId>
