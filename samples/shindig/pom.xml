<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>base</artifactId>
    <groupId>org.sakaiproject.nakamura</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.sakaiproject.nakamura.shindig</artifactId>
  <packaging>bundle</packaging>
  <name>Sakai Nakamura :: Shindig Bundle</name>
  <description>Apache Shindig Social API and Gadget Server bundle.</description>
  <version>1.0.0</version>
  <properties>
    <shindig.version>1.0-incubating</shindig.version>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Category>sakai-nakamura</Bundle-Category>
            <Bundle-Activator>${pom.artifactId}.Activator</Bundle-Activator>
            <Export-Package>
               org/apache/shindig/social/opensocial/model,
               org/apache/shindig/social/opensocial/spi,
               org/apache/shindig/common/cache,
               org/apache/shindig/social
            </Export-Package>
            <Private-Package>org.sakaiproject.nakamura.shindig</Private-Package>
            <Import-Package>
              !sun.*;resolution:=optional,
              !oracle.xml.parser.*,
              !net.sf.cglib.proxy,
              !nu.xom,
              !org.apache.commons.cli,
              !org.apache.oro.text.regex,
              !org.apache.tools.ant.*,
              !org.apache.xml.resolver.*,
              !org.dom4j.*,
              !org.hibernate.cache,
              !org.jaxen.*,
              !org.jgroups.*,
              !org.jmock.core,
              !org.mozilla.intl.chardet,
              !junit.framework,
              !org.easymock,
              !org.apache.avalon.framework.logger,
              org.apache.log;resolution:=optional,
              com.google.inject.cglib.reflect,
              *
            </Import-Package>
            <Embed-Transitive>true</Embed-Transitive>
            <Embed-Dependency>
              aopalliance,
              backport-util-concurrent,
              caja,
              commons-beanutils,
              commons-beanutils-core,
              commons-betwixt,
              commons-codec,
              commons-digester,
              commons-httpclient,
              commons-logging,
              core,
              ehcache,
              ezmorph,
              geronimo-stax-api_1.0_spec,
              hamcrest-all,
              htmlparser,
              icu4j,
              jdom,
              joda-time,
              json,
              json-lib,
              json_simple,
              jsr107cache,
              nekohtml,
              rome,
              xercesImpl,
              xpp3_min,
              shindig-features;inline=true,
              shindig-common;inline=true,
              shindig-gadgets;inline=true,
              shindig-server;inline=true,
              shindig-social-api;inline=true,
              xstream
            </Embed-Dependency>
            <_failok>true</_failok>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
<!-- OSGi -->
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>

<!-- Shindig -->
    <dependency>
      <groupId>org.apache.shindig</groupId>
      <artifactId>shindig-common</artifactId>
      <version>${shindig.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.shindig</groupId>
      <artifactId>shindig-features</artifactId>
      <version>${shindig.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.shindig</groupId>
      <artifactId>shindig-gadgets</artifactId>
      <version>${shindig.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.shindig</groupId>
      <artifactId>shindig-social-api</artifactId>
      <version>${shindig.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.shindig</groupId>
      <artifactId>shindig-server</artifactId>
      <version>${shindig.version}</version>
      <type>war</type>
    </dependency>

<!-- Pax Web -->
    <dependency>
      <groupId>org.ops4j.pax.web</groupId>
      <artifactId>pax-web-service</artifactId>
    </dependency>

<!-- Logging -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
  </dependencies>
</project>
